<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<p>
  <strong>Recipe:</strong>
  <% @doses.each do |dose| %>
    <ul>
      <li> <%= dose.ingredient.name %>  <%= dose.description %> ||
       <%= link_to "Edit", edit_cocktail_dose_path(@cocktail, dose) %>
       <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %> </li>
    </ul>
  <% end %>
</p>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail.id) %>
